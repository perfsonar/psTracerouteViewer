#!/bin/sh
# postinst script for perfsonar-traceroute-viewer
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)
        # apache setup
        if [ -e /usr/share/apache2/apache2-maintscript-helper ]; then
            . /usr/share/apache2/apache2-maintscript-helper

            apache2_invoke enmod cgi
            apache2_invoke enmod headers
            apache2_invoke enconf apache-perfsonar-traceroute-viewer
        else
            ln -sf /etc/apache2/conf-available/apache-perfsonar-traceroute-viewer.conf \
                   /etc/apache2/conf.d/

            a2enmod cgi
            a2enmod headers
            [ -e /etc/apache2/mods-available/version.load ] && a2enmod -q version

            if which invoke-rc.d > /dev/null; then
                invoke-rc.d apache2 restart
            else
                /etc/init.d/apache2 restart
            fi
        fi
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
